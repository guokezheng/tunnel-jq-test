    <update id="updateSdTrafficControlInfo" parameterType="SdTrafficControlInfo">
        update sd_traffic_control_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="incidentId != null">incident_id = #{incidentId},</if>
            <if test="reasonClass != null">reason_class = #{reasonClass},</if>
